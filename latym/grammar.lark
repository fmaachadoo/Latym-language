?start : program+

?program: expr

?expr   : atom+
	    | parentheses expr parentheses
        | parentheses expr parentheses operator expr

?atom   :(STRING 
        | number
        | operator)    -> atom

?operator: /adde|minuas|multiplica|divide|recide/

?parentheses:( OPEN_PARENTHESES
            | CLOSE_PARENTHESES) 

?number : INT
        | FLOAT
        

//Terminais
STRING    : /"[^"\\]*(\\[^\n\t\r\f][^"\\]*)*"/
INT.1     : /-?\d+/
FLOAT.2   : /-?\d+\.\d+/
OPEN_PARENTHESES : "posthac die"
CLOSE_PARENTHESES : "usque huc"

%ignore /\s+/
%ignore /;[^\n]*/
